{
	"name": "starter",
	"version": "1.0.0",
	"description": "A simple boilerplate to kickstart  a new Nodejs Project",
	"main": "app.js",
	"scripts": {
		"lint:fix": "eslint ./src --fix",
		"lint": "eslint ./src",
		"test": "echo \"no tests for now...\" && exit 1",
		"start": "node ./dist/app",
		"dev": "DEBUG=app:* nodemon --exec babel-node ./src/app.js",
		"clean": "rimraf dist",
		"build": "babel ./src --out-dir dist",
		"prod": "npm-run-all clean build start"
	},
	"author": "Brahim AFASSY",
	"license": "ISC",
	"dependencies": {
		"@hapi/joi": "^16.1.8",
		"config": "^3.2.4",
		"cors": "^2.8.5",
		"express": "^4.17.3",
		"express-async-errors": "^3.1.1",
		"express-request-id": "^1.4.1",
		"mongoose": "^5.7.13",
		"morgan": "^1.9.1",
		"npm-run-all": "^4.1.5",
		"pretty-error": "^2.1.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.3.4",
		"@babel/node": "^7.2.2",
		"@babel/preset-env": "^7.3.4",
		"babel-eslint": "^10.1.0",
		"babel-jest": "^24.4.0",
		"debug": "^4.1.1",
		"eslint": "^5.16.0",
		"@shelf/jest-mongodb": "^1.1.5",
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-config-standard": "^12.0.0",
		"eslint-plugin-import": "^2.16.0",
		"eslint-plugin-node": "^8.0.1",
		"eslint-plugin-promise": "^4.0.1",
		"eslint-plugin-standard": "^4.0.0",
		"faker": "^4.1.0",
		"jest": "^25.3.0",
		"rimraf": "^3.0.0"
	}
}
